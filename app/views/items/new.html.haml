.header
  =render 'items/top_page_header'

  .items_new_page
    .items_register_form
      = form_with model: @item, html: {class: "items_form"}, local: true do |f|
        .form_section
          %label(for="item_img")
            出品画像
          %span.form-group__require
            必須
          .image-attend
            クリックで最大10枚まで貼れます。
          .clearfix
            .previews_box
              #image-box
                #previews
                  - if @item.persisted?
                    - @item.item_imgs.each_with_index do |image, i|
                      = f.label :item_imgs_attributes_0_src.url, class:'image-box', data: { index: i }, width: "100", height: '100'
                = f.fields_for :item_imgs do |i|
                  .js-file_group{data: {index:i.index }}
                    = i.file_field :src, class: 'js-file'
                    %br/
                    -# %span.js-remove 削除
                
                  -#   - @item.item_imgs.each_with_index do |image, i|
                  -#     = f.label :item_imgs_attributes_0_src, class:'image-box', data: { index: i }, width: "100", height: '100'
                  -# = f.fields_for :item_imgs do |i|
                  -#   .js-file_group{data: {index:i.index }}
                  -#     = i.file_field :src, class: 'js-file'
                  -#     %br/
                  -#     %span.js-remove 削除
        .form_section
          = f.fields_for :name do |name|
            %label(for="name")
              商品名
            %span.form-group__require
              必須
            %br
              = name.text_field :name, placeholder: "40文字まで", value: "", class: "input-default"
            %br/
          = f.fields_for :introduction do |introduction|
            %label(for="introduction")
              商品の説明
            %span.form-group__require
              必須
            %br
            = introduction.text_area :name, placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）                                                             例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", value: "", class: "input-default"
            -# = f.text_area :content, class: "item_form", placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）                                                             例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"
            %br/
          = f.fields_for :category_id do |category_id|
            %label(for="category_id")
              カテゴリー
            %span.form-group__require
              必須
            %br
            = category_id.select :name, [['---'], ['レディース'], ['メンズ'], ['ベビー・キッズ'], ['インテリア・住まい・小物'], ['本・音楽・ゲーム'], ['おもちゃ・ホビー・グッズ'], ['コスメ・香水・美容'], ['家電・スマホ・カメラ'], ['スポーツ・レジャー'], ['ハンドメイド'], ['チケット'], ['自動車・オートバイ'], ['その他']]
            %br/
          = f.fields_for :brand_id do |brand_id|
            %label(for="brand_id")
              ブランド
            %span.form-group__require
              必須
            %br
            = brand_id.text_field :name, placeholder: "例）シャネル", value: "", class: "input-default"
            %br/
          = f.fields_for :item_condition do |item_condition|
            %label(for="item_condition")
              商品の状態
            %span.form-group__require
              必須
            %br
            = item_condition.select :name, [['選択して下さい'], ['新品、未使用'], ['未使用に近い'], ['目立った傷や汚れなし'], ['やや傷や汚れあり'], ['傷や汚れあり'], ['全体的に状態が悪い']]
        .form_section
          = f.fields_for :postage_payer do |postage_payer|
            %label(for="postage_payer")
              配送料の負担
            %span.form-group__require
              必須
            %br
            = postage_payer.select :name, [['選択してください'], ['送料込み(出品者負担)'], ['着払い(購入者負担)']]
          = f.fields_for :prefecture_code do |prefecture_code|
            %label(for="prefecture_code")
              発送元の地域
            %span.form-group__require
              必須
            %br
            = prefecture_code.select :name, [['選択してください'], ['北海道'], ['青森県'], ['岩手県'], ['宮城県'], ['秋田県'], ['山形県'], ['福島県'], ['茨城県'], ['栃木県'], ['群馬県'], ['埼玉県'], ['千葉県'], ['東京都'], ['神奈川県'], ['新潟県'], ['富山県'], ['石川県'], ['福井県'], ['山梨県'], ['長野県'], ['岐阜県'], ['静岡県'], ['愛知県'], ['三重県'], ['滋賀県'], ['京都府'], ['大阪府'], ['兵庫県'], ['奈良県'], ['和歌山県'], ['鳥取県'], ['島根県'], ['岡山県'], ['広島県'], ['山口県'], ['徳島県'], ['香川県'], ['愛媛県'], ['高知県'], ['福岡県'], ['佐賀県'], ['長崎県'], ['熊本県'], ['大分県'], ['宮崎県'], ['鹿児島県'], ['沖縄県']]
          = f.fields_for :preparation_day do |preparation_day|
            %label(for="preparation_day")
              発送までの日数
            %span.form-group__require
              必須
            = preparation_day.select :name, [['選択して下さい'], ['1~2日で発送'], ['2~3日で発送'], ['4~7日で発送']]
        .form_section
          = f.fields_for :price do |price|
            %label(for="price")
              販売価格
            %span.form-group__require
              必須
            %br
            .value_register_form
              ¥
            = price.text_field :name, placeholder: "1000", value: "", class: "input-default"
            -# %input(class="value_form" type="number" name="item[price]" id="item_price")/
            %br/
            .product_price-fee
              販売手数料(10%)
            .product_profit
              販売利益
        .form_section
          .register_btn
            -# .register_btn__exhibition
            -#   = link_to '出品する', item_path(@item.id)
            %input(type="submit" name="commit" value="出品する" class="register_btn__exhibition")/
        .attentions
          禁止されている行為および出品物を必ずご確認ください。偽ブランド品や盗品物などの販売は犯罪であり、法律
          により処罰される可能性があります。 また、出品をもちまして加盟店規約に同意したことになります。

.footer
  =render 'items/top_page_footer'
