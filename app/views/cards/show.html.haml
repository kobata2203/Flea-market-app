=render 'items/top_page_header'
.credit_cards-show
  .credit_cards-show__wrapper
    .credit_cards-show__wrapper__content-title
      支払い方法
    .credit_cards-show__wrapper__cards-index
      .credit_cards-show__wrapper__cards-index__title
        登録クレジットカード情報
      .credit_cards-show__wrapper__cards-index__detail
        .credit_cards-show__wrapper__cards-index__detail__left 
          - if @card_brand == "American Express"
            = image_tag "logo/#{@card_src}", height: '46', width: '46', alt: @card_brand, id: "card_image"
          - else 
            = image_tag "logo/#{@card_src}", height: '33', width: '46', alt: @card_brand, id: "card_image"
          .credit_cards-show__wrapper__cards-index__detail__left__card-number
            = "**** **** **** " + @default_card_information.last4
          .credit_cards-show__wrapper__cards-index__detail__left__exporation-date
            - exp_month = @default_card_information.exp_month.to_s
            - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
            = exp_month + " / " + exp_year
        .credit_cards-show__wrapper__cards-index__detail__right
          .credit_cards-show__wrapper__cards-index__detail__right__delete-button
            = form_tag(card_path(current_user.id), method: :delete, data: { confirm: "【確認】クレジットカード情報を削除してよろしいですか？\n（削除後も再登録可能です）" },id: 'charge-form',  name: "inputForm") do
              %input{ type: "hidden", name: "card_id", value: "" }
              %button 削除する
.wrapper
  .app_banner__banner
    %section.app_banner__banner__image
    .app_banner__banner__inner
      %h2.app_banner__banner__inner--title
        だれでも簡単、人生を変えるフリマアプリ
      %p.app_banner__banner__inner--text
        今すぐ無料ダウンロード
      .app_banner__banner__inner--icon
        = link_to "#", class: "app_banner__banner__inner--icon" do
          = image_tag "/app-store.svg",class: "appBtn"
        = link_to "#", class: "app_banner__banner__inner--icon" do
          = image_tag "/google-play.svg",class: "googleBtn"
  .footer
    .contents
      .content_main
        .content_head
        %h2
          FURIMAについて
          %ul
            %li
              = link_to "会社概要（運営会社）","#"
            %li
              = link_to "プライバシーポリシー","#"
            %li
              = link_to "FURIMA利用規約","#"
            %li
              = link_to "ポイントに関する特約","#"
      .content_main
        .content_head
        %h2
          FURIMAを見る
          %ul
            %li
              = link_to "カテゴリー一覧","#"
            %li
              = link_to "ブランド一覧"
      .content_main
        .content_head
        %h2
          ヘルプ＆ガイド
          %ul
            %li
              = link_to "FURIMAガイド","#"
            %li
              = link_to "FURIMAロゴ利用ガイドライン","#"
            %li
              = link_to "お知らせ","#"
    .footer_logo
      = link_to '#' do
        %p
          = image_tag src="/logo-white.png",size:"185x49"
          .footer_company_name
            %h3
              © FURIMA, Inc.
