.title
  .title__contents
    クレジットカード入力画面
.main-form
  .main-form__frame
    %form{ id: 'charge-form', name: 'inputForm', action: '/cards/pay', "accept-charset": 'UTF-8', method: 'post'}
      %input{name:'utf8', type:'hidden', value:'✔︎'}
      %input{type:'hidden', name:'authenticity_token', value:'rfDEHtq+L/Txw0SCJiK9O2vyaBjyXRpHqHvnanQt5Y1IcJIDF85MOH44Z402teJfeUWi+S6EzbJYhXd1/RJDpg=='}
      .form-group
        %label
          カード番号
        %span.form-group__require
          必須
        %br
        %input{type:'text', name:'number', id:'card_number', value:'', class:'form-group__input', placeholder:'半角数字のみ', maxlength:'16'}
        %ul.card-list
          %li.icon-visa
            =image_tag '/assets/visa.gif', width:'40', height:'30',alt:'visa'
          %li.icon-master
            =image_tag  '/assets/master.gif', width:'40', height:'30',alt:'master'
          %li.icon-discover
            =image_tag '/assets/discover', width:'40', height:'30',alt:'discover'
          %li.icon-jcb
            =image_tag '/assets/jcb.gif', width:'40', height:'30',alt:'jcb'
          %li.icon-amex
            =image_tag '/assets/amex.gif', width:'40', height:'30',alt:'amex'
          %li.icon-diners
            =image_tag '/assets/diners', width:'40', height:'30',alt:'diners'
      .form-group
        %label
          有効期限
        %span.form-group__require
          必須
        %br
        %select.form-group__input__one{id:'exp_month', name:'exp_month', type:'text'}
          %option{value:''}--
          %option{value:'1'}01
          %option{value:'2'}02
          %option{value:'3'}03
          %option{value:'4'}04
          %option{value:'5'}05
          %option{value:'6'}06
          %option{value:'7'}07
          %option{value:'8'}08
          %option{value:'9'}09
          %option{value:'10'}10
          %option{value:'11'}11
          %option{value:'12'}12
        %lavel月
        %select.form-group__input__one{id:'exp_year', name:'exp_year', type:'text'}
          %option{value:''}--
          %option{value:'2020'}20
          %option{value:'2021'}21
          %option{value:'2022'}22
          %option{value:'2023'}23
          %option{value:'2024'}24
          %option{value:'2025'}25
          %option{value:'2026'}26
          %option{value:'2027'}27
          %option{value:'2028'}28
          %option{value:'2029'}29
        %label年
      .form-group
        %labelセキリュティコード
        %span.form-group__require必須
        %br
        %input{type:'text', name:'cvc', id:'cvc', value: '', class:'form-group__input', placeholder: 'カード背面3~4桁の番号', maxlength:'4'}
      .form-group__add
        .form-group__add__question?
        %p.form-group__text--right--blue
          カードの裏面の番号とは?
      .form-group
        #card_token
        %input{type:'submit', name:'commit', value:'登録する', id:'token_submit', class:'btn--red', "data-disable-with":'登録する'}
