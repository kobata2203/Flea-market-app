=render 'items/top_page_header'
.credit_cards-new
  .credit_cards-new__wrapper
    .credit_cards-new__wrapper__title
      クレジット入力画面
    .credit_cards-new__wrapper__form
      = form_tag(pay_cards_path, method: :post, id: 'charge-form', name: "inputForm" ) do
        .credit_cards-new__wrapper__form__cardnumber
          %label カード番号
          %span 必須
          = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ", maxlength: "16", type: "text", id: "card_number"
          %br
        .credit_cards-new__wrapper__form__logos
          = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/visa.svg?238737266", width:"49px",height:"20px" 
          = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?238737266", width:"34px",height:"20px"
          = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?238737266",width:"30px",height:"20px" 
          = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?238737266",width:"32px",height:"20px" 
          = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?238737266",width:"21px",height:"20px" 
          = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?238737266",width:"32px",height:"20px"
          = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/discover.svg?238737266",width:"32px",height:"20px"
        .credit_cards-new__wrapper__form__expiration-desc
          %label 有効期限
          %span 必須
        .credit_cards-new__wrapper__form__expiration-date
          %select#exp_month{name: "exp_month", type: "text"}
            %option{value: ""} --
            %option{value: "1"}01
            %option{value: "2"}02
            %option{value: "3"}03
            %option{value: "4"}04
            %option{value: "5"}05
            %option{value: "6"}06
            %option{value: "7"}07
            %option{value: "8"}08
            %option{value: "9"}09
            %option{value: "10"}10
            %option{value: "11"}11
            %option{value: "12"}12
          %p 月
          %select#exp_year{name: "exp_year", type: "text"}
            %option{value: ""} --
            %option{value: "2019"}19
            %option{value: "2020"}20
            %option{value: "2021"}21
            %option{value: "2022"}22
            %option{value: "2023"}23
            %option{value: "2024"}24
            %option{value: "2025"}25
            %option{value: "2026"}26
            %option{value: "2027"}27
            %option{value: "2028"}28
            %option{value: "2029"}29
          %p 年
          %br 
        .credit_cards-new__wrapper__form__cvc
          %label セキュリティコード
          %span 必須
          = text_field_tag "cvc", "", class: "form-group__input", placeholder: "カード背面3桁または4桁の番号", maxlength: "4", id: "cvc"
          #card_token
        .credit_cards-new__wrapper__form__submit
          = submit_tag "登録する", id: "token_submit", class:'btn--red'
.wrapper
  .app_banner__banner
    %section.app_banner__banner__image
    .app_banner__banner__inner
      %h2.app_banner__banner__inner--title
        だれでも簡単、人生を変えるフリマアプリ
      %p.app_banner__banner__inner--text
        今すぐ無料ダウンロード
      .app_banner__banner__inner--icon
        = link_to "#", class: "app_banner__banner__inner--icon" do
          = image_tag "/app-store.svg",class: "appBtn"
        = link_to "#", class: "app_banner__banner__inner--icon" do
          = image_tag "/google-play.svg",class: "googleBtn"
  .footer
    .contents
      .content_main
        .content_head
        %h2
          FURIMAについて
          %ul
            %li
              = link_to "会社概要（運営会社）","#"
            %li
              = link_to "プライバシーポリシー","#"
            %li
              = link_to "FURIMA利用規約","#"
            %li
              = link_to "ポイントに関する特約","#"
      .content_main
        .content_head
        %h2
          FURIMAを見る
          %ul
            %li
              = link_to "カテゴリー一覧","#"
            %li
              = link_to "ブランド一覧"
      .content_main
        .content_head
        %h2
          ヘルプ＆ガイド
          %ul
            %li
              = link_to "FURIMAガイド","#"
            %li
              = link_to "FURIMAロゴ利用ガイドライン","#"
            %li
              = link_to "お知らせ","#"
    .footer_logo
      = link_to '#' do
        %p
          = image_tag src="/logo-white.png",size:"185x49"
          .footer_company_name
            %h3
              © FURIMA, Inc.
